<% if notice %>
  <div id="alert" class="alert alert-info alert-dismissible" role="alert">
    <button id="close-notice" type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <p><%= notice %></p>
  </div>
<% end %>
<% if alert %>
  <div id="alert" class="alert alert-warning alert-dismissible" role="alert">
    <button id="close-alert" type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <p><%= alert %></p>
  </div>
<% end %>
