<div class="form-container">
  <div class="product-form">
    <%= simple_form_for(@lesson) do |f| %>
      <%= f.input :title, label: 'Intitulé' %>
      <%= f.input :category, label: 'Catégorie' %>
      <%= f.input :description, label: 'Description du cours' %>
      <%= f.input :card_description, label: 'Description apparaissant sur la carte' %>
      <%= f.input :price_cents, label: 'Prix en euros' %>
      <%= f.input :quantity, label: 'Quantité'%>
      <%= f.input :adult, label: 'Cours pour adulte', class: "form-control" %>
      <%= f.input :child, label: 'Cours pour enfant', class: "form-control" %>
      <%= f.input :phone_booking, label: 'Réservation par téléphone', class: "form-control" %>
      <%= f.input :payable, label: 'Payable en ligne', class: "form-control" %>
      <%= f.input :online_booking, label: 'Réservation en ligne', class: "form-control" %>
      <%= f.input :gift_card, label: 'Carte cadeau', class: "form-control" %>
      <%= f.file_field :photo, label: 'Ajouter une photo' %>
      <br>
      <div class="button-container">
        <%= f.submit "+ ajouter ce produit", class: "btn btn-size" %>
      </div>
    <% end %>
  </div>
</div>
