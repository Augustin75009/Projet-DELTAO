<div class="show-container">
  <div class="root-show">
    <%= link_to '<i class="fas fa-chevron-circle-left"></i>   Retour à la liste'.html_safe, lessons_path %>
  </div>
  <div class="product-container">
    <div class="product-image">
      <span><%= image_tag(@lesson.photo.to_s) do %>
      <% end %>
      </span>
    </div>
    <div class="product-description">
      <div class="description-top">
        <div class="description-title">
          <%= @lesson.title %>
        </div>
        <div class="description-category">
          <%= @lesson.category %>
        </div>
      </div>
        <div class="description-content">
          <%= @lesson.description %>
        </div>
      <div class="description-bottom">
        <div class="price-show">
          <% if @lesson.payable == true %>
            <%= number_to_currency(@lesson.total, unit: "€", separator: ",", format: "%n %u") %>
          <% end %>
        </div>
      <% if @lesson.payable %>
        <%= render "lessons/payable" %>
      <% elsif @lesson.online_booking %>
        <%= render "lessons/online-booking" %>
      <% else @lesson.online_booking %>
        <%= render "lessons/phone-booking" %>
      <% end %>
      <% if user_signed_in? %>
        <% if current_user.adminkey == "admin" %>
          <% array = [] %>
          <% i = 0 %>
          <% 363.times do |i|
            array << (Date.today + i)
            i += 1
          end %>
            <%= simple_form_for @lesson do |f|%>
              <%= f.input :slot, label: "Choisir une nouvelle date", collection: array.map { |slot| l(slot.to_date, :format => "%A %e %B %Y", :locale => 'fr')} %>
              <%= hidden_field_tag "true", true%>
              <%= f.button :submit, "Ajouter", class: "button-show" %>
            <% end %>
            <%= simple_form_for @lesson do |f|%>
              <%= f.input :slot, label: "Supprimer une date", collection: @lesson.slot.map { |slot| l(slot.to_date, :format => "%A %e %B %Y", :locale => 'fr')} %>
              <%= f.button :submit, "Supprimer", class: "button-show" %>
            <% end %>
        <% end %>
      <% end %>
      </div>
    </div>
  </div>
  <div class="more-infos">
     <ul class="infos-list">
        <li class="tab">Description</li>
        <li class="tab selected-tab">Horaires</li>
        <li class="tab">Tarifs</li>
        <li class="tab">Avis</li>
      </ul>
      <div class="infos-dispatch-content">
        <span class=""><%= render 'lessons/description' %></span>
        <span class="infos-show"><%= render 'lessons/horaires' %></span>
        <span class=""><%= render 'lessons/reglement' %></span>
        <span class=""><%= render 'lessons/avis' %></span>
      </div>
  </div>
</div>
