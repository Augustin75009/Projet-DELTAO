<div class="show-container">
  <div class="root-show">
    <%= link_to '<i class="fas fa-chevron-circle-left"></i>   Retour à la liste'.html_safe, lessons_path %>
  </div>
  <div class="product-container">
    <div class="product-image">
      <!-- <span><%= image_tag(@lesson.photo.to_s) do %>
      <% end %>
      </span> -->
    </div>
    <div class="product-description">
      <div class="description-top">
        <div class="description-title">
          <%= @lesson.title %>
        </div>
        <div class="description-category">
          <%= @lesson.category %>
        </div>
      </div>
        <div class="description-content">
          <%= @lesson.description %>
        </div>
      <div class="description-bottom">
        <div class="price-show">
          <%= number_to_currency(@lesson.total, unit: "€", separator: ",", format: "%n %u") %>
        </div>
        <div class="cart">
            <%= simple_form_for @lesson do |f|%>
          <div class="quantity">
            <input type="number" max='<%= @lesson.quantity %>' min="1" step="1" value="1">
          </div>
          <% end %>
          <div class="button">
            <%= link_to cart_items_path(lesson: @lesson.id), method: :post, remote: false do %>
              <button class="button-show">Ajouter au panier</button>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="more-infos">
     <ul class="infos-list">
        <li><%= link_to "Description", lesson_path({tab: "description"}), remote: false %></li>
        <li><%= link_to "Horaires", lesson_path({tab: "horaires"}), remote: false %></li>
        <li><%= link_to "Réglement", lesson_path({tab: "reglement"}), remote: false %></li>
        <li><%= link_to "Avis", lesson_path({tab: "avis"}), remote: false %></li>
      </ul>
      <% case params[:tab] %>
      <% when "description" %>
        <%= render 'lessons/description' %>
      <% when "horaires" %>
        <%= render 'lessons/horaires' %>
      <% when "reglement" %>
        <%= render 'lessons/reglement' %>
      <% when "avis" %>
        <%= render 'lessons/avis' %>
      <% end %>
  </div>
</div>

