<% content1 = "https://images.unsplash.com/photo-1487268113661-a75c49688467?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=752&q=80" %>
<% content2 = "https://images.unsplash.com/photo-1481401908818-600b7a676c0d?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjE3MzYxfQ&auto=format&fit=crop&w=751&q=80" %>
<% content3 = "https://images.unsplash.com/photo-1462849251721-16fc0fa4609c?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=750&q=80" %>

<div class="packer">
  <div class="slide">
    <div class="list-carrousel">
      <div><img src=<%= content1 %> alt="Smiley face" style="height: 300px; border-radius: 10px"></div>
      <div><img src=<%= content2 %> alt="Smiley face" style="height: 300px; border-radius: 10px"></div>
      <div><img src=<%= content3 %> alt="Smiley face" style="height: 300px; border-radius: 10px"></div>
    </div>
  </div>
    <div class="search-lesson">
      <div class="search-wrapper">
        <div class="search-input">
          <%= form_tag lessons_path, method: :get do %>
            <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Rechercher une leçon...",
            value: ""
            %>
        </div>
        <div class="search-submit">
            <%= submit_tag("Valider") %>
          <% end %>
        </div>
        <div class="dropdown">
          <button class="dropbtn">Filtrer par catégorie</button>
            <div class="dropdown-content">
              <%= link_to "Atelier adulte", lessons_path({query: "Adulte"}) %>
              <%= link_to "Atelier enfant", lessons_path({query: "enfant"}) %>
              <%= link_to "Atelier découverte", lessons_path({query: "découverte"}) %>
            </div>
          </div>
      </div>
    </div>
  <div class="main-container" id="cards">
    <h3><span>Nos ateliers</span></h3>
    <div class="card-container">
      <% @lessons.each do |lesson| %>
        <div class ="card-dispatch">
          <%= link_to lesson_path(lesson) do %>
            <div class="card">
              <div class ="card-image"
                   style="background-image: url(
                    '<%= cl_image_path lesson.photo.blank? ? 'https://picsum.photos/300/300/?random' : lesson.photo %>'
                   );">
              </div>
              <div class="card-content">

                <h5><%= lesson.title %></h5>
                <p class="text-right"><%= number_to_currency(lesson.total, unit: "€", separator: ",", format: "%n %u") %></p>
              </div>
              <p class="text-bottom">Description</p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="fb-event"></div>
  </div>
</div>
