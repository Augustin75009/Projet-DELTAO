<h1>Purchase of a product <%= @purchase.teddy_sku %></h1>
<%= form_tag purchase_payments_path(@purchase) do %>
  <article>
    <label class="amount">
      <span>Amount: <%= humanized_money_with_symbol(@purchase.amount) %></span>
    </label>
  </article>
  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
    data-name="My Teddy"
    data-email="<%= current_user.email %>"
    data-description="Teddy <%= @order.teddy_sku %>"
    data-amount="<%= @order.amount_cents %>"
    data-currency="<%= @order.amount.currency %>"></script>

<% end %>
