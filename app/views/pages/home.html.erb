<%= render 'shared/banner' %>
<h1 class="main-title">NOS PROCHAINS EVENEMENTS</h1>
<div class="announcement">
  <div class="left-side">
    <% @lessons.each_with_index do |stage, index| %>
      <% if index.even? %>
        <% side = "left" %>
        <div class='<%= "stage-#{side}" %>'>
          <h3><%= stage.price_cents %></h3>
          <p><%= stage.title %></p>en savoir +
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="right-side">
    <% @lessons.each_with_index do |stage, index| %>
      <% if index.odd? %>
        <% side = "right" %>
        <div class='<%= "stage-#{side}" %>'>
          <h3><%= stage.price_cents %></h3>
          <p><%= stage.title %></p>en savoir +
        </div>
      <% end %>
    <% end %>
  </div>
</div>
