<div class="cart_item-container" style="padding-top: 100px">
  <p>Nombre d'articles : <%= @cart_items.count %></p>
  <% @cart_items.each do |cart_item| %>
    <li><%= cart_item.product.name %>
    <%= link_to "supprimer", cart_item_path(:cart_item, cart_item), method: :delete %>
    </li>
    <%= link_to "payer", cart_item_purchases_path(cart_item) %>
  <% end %>
</div>



