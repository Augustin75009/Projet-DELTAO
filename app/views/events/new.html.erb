<div class="form-container">
  <div class="product-form">
    <%= simple_form_for(@event) do |f| %>
      <%= f.input :title, label: 'Intitulé' %>
      <%= f.input :description, label: 'Description' %>
      <%= f.input :start_date, label: 'Date de début', as: :date, html5: true %>
      <%= f.input :end_date, label: 'Date de fin', as: :date, html5: true %>
      <%= f.input :location, label: 'Lieu' %>
      <%= f.file_field :photo, label: 'Ajouter une photo' %>
      <br>
      <div class="button-container">
        <%= f.submit "+ ajouter cet event", class: "btn btn-size" %>
      </div>
    <% end %>
  </div>
</div>
