<div class="card-wrapper-event">
  <%= render 'shared/dashboard'%>
  <% @events.each do |event| %>
    <div class ="card-dispatch-event" style="margin-top: 100px;">
      <%= link_to event_path(event) do %>
        <div class="card-event">
          <div class ="card-image-event"
               style="background-image: url(
                '<%= cl_image_path event.photo.blank? ? 'https://picsum.photos/300/300/?random' : event.photo %>'
               );">
          </div>
          <div class="card-content-event">

            <h4><%= event.title %></h4>
            <% unless event.start_date.nil? %>
              <p><%= l(event.start_date, :format => "%e %B %Y", :locale => 'fr') %></p>
            <% end %>
            <p><%= event.description %></p>
          </div>
          <div class="event-infos"></div>
          <% if user_signed_in? %>
            <% if current_user.adminkey == "admin" %>
              <%= link_to edit_event_path(event) do %>
                <button id="modify" class="button-infos">modifier</button>
              <% end %>
              <%= link_to event_path(event), method: :delete, data: { confirm: 'Confirmer' }  do %>
                <button id="modify" class="button-infos">Supprimer</button>
              <% end %>
            <% end %>
          <% end %>
      <% end %>
        </div>
    </div>
  <% end %>
</div>
